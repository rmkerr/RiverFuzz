@model List<SequenceSummaryViewModel>

@{
    ViewData["Title"] = "Summary";
}

<h1>@ViewData["Title"]</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Status</th>
            <th scope="col">Url</th>
            <th scope="col">Tags</th>
        </tr>
    </thead>
    <tbody>
        @foreach (SequenceSummaryViewModel summary in Model)
        {
            <tr>
                <th scope="row"><a asp-controller="Results" asp-action="Sequence" asp-route-id="@(summary.sequence_id)">@(summary.sequence_id)</a></th>
                <td>@summary.status</td>
                <td class="text-break">@summary.url</td>
                <td>
                     @foreach (RequestSequenceLabelViewModel label in summary.Labels)
                      {
                          <span class="badge @RequestSequenceLabelViewModel.ColorMappings.GetValueOrDefault(label.name,"badge-primary")">@label.name</span>
                      }
                </td>
            </tr>
        }
