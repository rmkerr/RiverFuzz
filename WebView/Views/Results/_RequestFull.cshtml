@{ 
    RequestViewModel request = ViewData["Request"] as RequestViewModel;
}

<div class="card">
    <div class="card-header" id="request-accordion-heading-@request.id">
        <h2 class="mb-0">
            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#request-accordion-collapse-@request.id" ; aria-expanded="true" aria-controls="request-accordion-collapse-@request.id">
                @request.sequence_position - @request.method - @request.url
            </button>
        </h2>
    </div>
    <div id="request-accordion-collapse-@request.id" class="collapse hide" aria-labelledby="request-accordion-heading-@request.id">
        <div class="card-body">
            <h3>Headers:</h3>
            <p class="card-text">@request.headers</p>
            <h3>Content:</h3>
            <p class="card-text">@request.content</p>
        </div>
    </div>
</div>