@model List<FuzzerRunViewModel>

@{
    ViewData["Title"] = "All Scans";
}

<h1>@ViewData["Title"]</h1>
<table class="table" id="run-summary-table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Start Time</th>
            <th scope="col">End Time</th>
            <th scope="col">Execution Time</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; ++i)
        {
            <tr>
                <th scope="row"><a asp-controller="Results" asp-action="Summary" asp-route-id="@Model[i].id">@Model[i].id</a></th>
                <td><a asp-controller="Results" asp-action="Summary" asp-route-id="@Model[i].id">@Model[i].name</a></td>
                <td>@Model[i].start_time</td>
                <td>@Model[i].end_time</td>
                <td>@(Model[i].end_time - Model[i].start_time)</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts
{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
    <script type="text/javascript">
        $(document).ready( function () {
            $('#run-summary-table').DataTable();
        } );
    </script>
}